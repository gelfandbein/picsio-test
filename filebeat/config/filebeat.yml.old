###
# https://www.sarulabs.com/post/5/2019-08-12/sending-docker-logs-to-elasticsearch-and-kibana-with-filebeat.html
###
# + ignore_older: 24h


filebeat.config.modules:
    enabled: true
    path: ${path.config}/modules.d/*.yml
    reload.enabled: false

metricbeat.autodiscover:
  providers:
    - type: docker
      hints.enabled: true

filebeat.modules:
  - module: docker
    metricsets:
      - "container"
      - "cpu"
      - "diskio"
      - "healthcheck"
      - "info"
      #- "image"
      - "memory"
      - "network"
    hosts: ["unix:///var/run/docker.sock"]
    period: 10s
    enabled: true

filebeat.modules:
  - module: system
    syslog:
      - enabled: true
    auth:
      - enabled: true

filebeat.inputs:
  - type: container
    enabled: true
    ignore_older: 24h
    paths:
      - "/var/lib/docker/containers/*/*.log"
    tags: ["docker-logs"]
  - type: docker
    combine_partial: true
    containers:
      path: "/var/lib/docker/containers"
      stream: "stdout"
      ids:
        - "*"
  - type: log
    enabled: true
    ignore_older: 24h
    paths:
      /var/log/host-logs/mail.*
    exclude_files: [".gz$"]
    tags: ["host-mail"]

processors:
  - add_docker_metadata:
    host: "unix:///var/run/docker.sock"

  - decode_json_fields:
    fields: ["message"]
    target: "json"
    overwrite_keys: true

### Disable Index lifecycle policy
setup.ilm.enabled: false

